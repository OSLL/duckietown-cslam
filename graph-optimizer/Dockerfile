FROM ros:kinetic-ros-core

MAINTAINER Amaury Camus <camusam@ethz.ch>

ENV DISPLAY $DISPLAY
ENV QT_X11_NO_MITSHM 1

# Install rospy
RUN apt-get update && apt-get install -y --allow-unauthenticated --no-install-recommends ros-kinetic-rospy ros-kinetic-tf2 ros-kinetic-tf ros-kinetic-tf-conversions qtbase5-dev qtdeclarative5-dev libeigen3-dev libsuitesparse-dev python-pip python-numpy python-scipy python-pip python-numpy python-scipy vim && apt-get clean

# RUN pip install --upgrade pip
RUN pip install PyGeometry

# DO NOT PUT ANYTHING HERE BEFORE THE G2O BUILDING! IT TAKES AGES!
ARG g2o_lib_dir=lib-graph-optimizer/src/g2opy
COPY ${g2o_lib_dir} /graph_optimizer/lib-graph-optimizer/src/g2opy

RUN cd /graph_optimizer/lib-graph-optimizer/src/g2opy ; mkdir build ; cd build ; cmake -DPYBIND11_PYTHON_VERSION=2.7 ..  ; make -j3; cd ..; python setup.py install

ARG graph_lib_dir=lib-graph-optimizer/
COPY ${graph_lib_dir} /graph_optimizer/lib-graph-optimizer/

RUN cd /graph_optimizer/lib-graph-optimizer; python setup.py develop --no-deps


## Pose graph optimizer
ARG ros_nodes=ros-graph-optimizer/src/pose_graph_builder
RUN mkdir -p /graph_optimizer/catkin_ws/src/pose_graph_builder
COPY ${ros_nodes} /graph_optimizer/catkin_ws/src/pose_graph_builder

# Add the some Duckietown messages (needed for the custom AprilTagDetection message)
COPY ros-graph-optimizer/src/duckietown_msgs /graph_optimizer/catkin_ws/src/duckietown_msgs

# Setup the ros-visualization
COPY ros-graph-optimizer/src/cslam_visualization /graph_optimizer/catkin_ws/src/clsam_visualization
COPY ros-graph-optimizer/src/duckietown-visualization/duckietown_visualization /graph_optimizer/catkin_ws/src/duckietown_visualization
RUN /bin/bash -c "source /opt/ros/kinetic/setup.bash; cd /graph_optimizer/catkin_ws/; catkin_make"
RUN chmod +x /graph_optimizer/catkin_ws/src/pose_graph_builder/*.sh


CMD /bin/bash -c "/graph_optimizer/catkin_ws/src/pose_graph_builder/wrapper.sh"
